<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/LayoutMain">

    <ViewAnimator
        android:id="@+id/ViewAnimatorMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dip">

        <!-- 0 -->
        <include
            layout="@layout/ics_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--  1  -->
        <RelativeLayout
            android:id="@+id/ICSLobby"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableLayout
                android:id="@+id/TableHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:stretchColumns="0">

                <TableRow>

                    <TextView
                        android:text="@string/title_loading"
                        android:id="@+id/TextViewHeader"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/MyHeaderTextStyle" />

                    <ImageButton
                        android:id="@+id/ICSCloseConsole"
                        android:src="@drawable/navigation_cancel"
                        android:layout_height="40dip"
                        android:layout_width="40dip"
                        style="@style/ChessImageButton" />
                </TableRow>
            </TableLayout>

            <ViewAnimator
                android:id="@+id/ViewAnimatorLobby"
                android:layout_below="@id/TableHeader"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dip">
                <!--  0.0  -->
                <ListView
                    android:id="@+id/ICSPlayers"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <!--  0.1  -->
                <ListView
                    android:id="@+id/ICSGames"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <!--  0.2  -->
                <ListView
                    android:id="@+id/ICSWelcome"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <!--  0.3  -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:text="Touch to accept challenge"
                        android:id="@+id/TextViewRefresh"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/MySmallTextStyle" />

                    <ListView
                        android:id="@+id/ICSChallenges"
                        android:layout_below="@id/TextViewRefresh"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </RelativeLayout>
                <!--  0.4  -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <ProgressBar
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        style="?android:attr/progressBarStyleLarge" />
                </RelativeLayout>
                <!--  0.5  -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <TableLayout
                        android:id="@+id/TableICSLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        android:gravity="center">

                        <TableRow
                            style="@style/MyRowStyle"
                            android:minHeight="50dip">

                            <TextView
                                android:text="@string/ics_client_server"
                                style="@style/MyLabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="FICS"
                                style="@style/MyLabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow
                            style="@style/MyRowStyle"
                            android:minHeight="50dip">

                            <TextView
                                android:text="@string/ics_client_presets"
                                style="@style/MyLabelTextStyle" />

                            <Spinner
                                android:id="@+id/SpinnerLoginPresets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dip"></Spinner>
                        </TableRow>

                        <TableRow
                            style="@style/MyRowStyle"
                            android:minHeight="50dip">

                            <TextView
                                android:text="@string/ics_client_handle"
                                style="@style/MyLabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:text="guest"
                                android:id="@+id/EditICSHandle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="100dip"
                                android:singleLine="true"
                                android:inputType="text"
                                android:imeOptions="actionNext" />
                        </TableRow>

                        <TableRow
                            style="@style/MyRowStyle"
                            android:minHeight="50dip">

                            <TextView
                                android:text="@string/ics_client_password"
                                style="@style/MyLabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/EditICSPwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:password="true"
                                android:minWidth="100dip"
                                android:singleLine="true"
                                android:inputType="text"
                                android:layout_marginBottom="10dip"
                                android:imeOptions="actionDone" />
                        </TableRow>

                        <TableRow
                            style="@style/MyRowStyle"
                            android:minHeight="50dip">

                            <Button
                                android:text="@string/button_register"
                                android:id="@+id/ButICSRegister"
                                android:layout_alignParentLeft="true"
                                android:layout_width="40dip"
                                android:layout_height="wrap_content" />

                            <Button
                                android:text="@string/button_login"
                                android:id="@+id/ButICSLogin"
                                android:layout_alignParentRight="true"
                                android:layout_width="40dip"
                                android:layout_height="wrap_content" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
                <!-- 0.6 -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/LayoutICSBoardConsole"
                    android:padding="2dip">

                    <TableLayout
                        android:id="@+id/TableConsoleEditAndButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:stretchColumns="0">

                        <TableRow>

                            <EditText
                                android:id="@+id/EditICSConsole"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:inputType="text"
                                android:imeOptions="actionSend" />

                            <ImageButton
                                android:id="@+id/ButtonICSConsoleQuickCmd"
                                android:src="@drawable/collections_view_as_list"
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                style="@style/ChessImageButton" />
                        </TableRow>
                    </TableLayout>

                    <ScrollView
                        android:id="@+id/ScrollICSConsole"
                        android:layout_alignParentTop="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@id/TableConsoleEditAndButton">

                        <TextView
                            android:text="..."
                            android:id="@+id/TextViewICSBoardConsole"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dip"
                            android:textSize="10sp" />
                    </ScrollView>

                </RelativeLayout>
                <!--  0.7  -->
                <ListView
                    android:id="@+id/ICSStored"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </ViewAnimator>
        </RelativeLayout>

        <!-- 2 ############################################# -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="@string/ics_not_connected"
                android:id="@+id/TextViewNotConnected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextStyle" />

            <Button
                android:id="@+id/ButtonLogin"
                android:text="@string/ics_connect"
                android:layout_below="@id/TextViewNotConnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </ViewAnimator>
</RelativeLayout>
